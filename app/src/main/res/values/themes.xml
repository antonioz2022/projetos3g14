<resources>

    <!-- Tema principal do aplicativo -->
    <style name="Theme.LibrefixTvAndroid" parent="@style/Theme.Leanback">
        <item name="android:background">#000000</item>
    </style>

    <!-- Estilo para o título do filme -->
    <style name="MovieTitleStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Estilo para a sinopse do filme -->
    <style name="MovieDescriptionStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Estilo para botões -->
    <style name="ActionButtonStyle">
        <item name="android:backgroundTint">#1E1E1E</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RelatedMoviesHeaderStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00B4D8</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
